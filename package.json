{
    "name": "network-checker",
    "version": "1.0.0",
    "author": "Jango73 (github.com/Jango73)",
    "description": "Network Checker",
    "main": "dist/main/index.js",
    "build": {
        "productName": "Network Checker",
        "appId": "com.jango73.networkchecker",
        "directories": {
            "output": "dist",
            "buildResources": "build"
        },
        "files": [
            "dist/main/**/*",
            "dist/renderer/**/*",
            "dist/shared/**/*",
            "dist/assets/**/*"
        ],
        "win": {
            "target": "nsis"
        }
    },
    "scripts": {
        "start": "npm run build:main && npm run build && electron .",
        "dev": "vite",
        "build": "tsc && vite build && electron-builder",
        "typecheck": "tsc --noEmit",
        "lint": "eslint . --ext .ts,.tsx",
        "lint-fix": "eslint .  --fix --ext .ts,.tsx",
        "format": "prettier --write .",
        "build:main": "tsc --project tsconfig.json --outDir dist/main"
    },
    "devDependencies": {
        "@types/node": "^22.7.4",
        "@types/react": "^18.3.11",
        "@types/react-dom": "^18.3.0",
        "@typescript-eslint/eslint-plugin": "^8.7.0",
        "@typescript-eslint/parser": "^8.7.0",
        "@vitejs/plugin-react": "^4.5.0",
        "electron": "^26.0.0",
        "electron-builder": "^24.6.3",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.4.1",
        "eslint-plugin-react": "^7.37.1",
        "eslint-plugin-react-hooks": "^4.6.2",
        "prettier": "^3.3.3",
        "typescript": "^5.6.3",
        "vite": "^5.4.8",
        "vite-plugin-electron": "^0.15.0",
        "vite-plugin-electron-renderer": "^0.14.5"
    },
    "dependencies": {
        "axios": "^1.7.2",
        "i18next": "^23.11.5",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-i18next": "^15.0.3",
        "zod": "^3.23.8",
        "zustand": "^5.0.0"
    }
}
